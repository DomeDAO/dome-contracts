# HyperEVM Deployment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# NETWORK SETTINGS
# =============================================================================

# Network: mainnet or testnet
HYPER_EVM_NETWORK=testnet

# Optional: Override RPC URL (defaults are in config/hyperevm.ts)
# HYPER_EVM_RPC=https://rpc.hyperliquid.xyz/evm

# Optional: Override chain ID
# HYPER_EVM_CHAIN_ID=999

# =============================================================================
# DEPLOYER ACCOUNT (choose ONE method)
# =============================================================================

# Option 1: Ledger hardware wallet (recommended for mainnet)
# HYPER_EVM_LEDGER_ADDRESS=0xYourLedgerAddress

# Option 2: Private key (use only for testnet)
# HYPER_EVM_PRIVATE_KEY=0xYourPrivateKey

# =============================================================================
# CONTRACT ADDRESSES
# =============================================================================

# USDC address on HyperEVM
# Mainnet: 0xb88339CB7199b77E23DB6E890353E22632Ba630f (native USDC via Circle CCTP)
# Testnet: Check https://docs.hyperliquid.xyz/ for testnet addresses
HYPER_EVM_USDC=

# Hyperliquid native vault address (default is usually correct)
HYPER_EVM_HYPER_VAULT=0x93ad52177d0795de8c67c92b1a72035293cb7aac

# CoreWriter system contract
HYPER_EVM_CORE_WRITER=0x3333333333333333333333333333333333333333

# =============================================================================
# VAULT PARAMETERS
# =============================================================================

# Donation percentage in basis points (1000 = 10%, max 10000 = 100%)
HYPER_EVM_DONATION_BPS=1000

# Share token metadata
HYPER_EVM_SHARE_NAME="NGO Hyper Share"
HYPER_EVM_SHARE_SYMBOL="NGO-H"

# =============================================================================
# OUTPUT
# =============================================================================

# Deployment output file path (relative to contracts/ or absolute)
HYPER_EVM_DEPLOY_OUTPUT=../deployments/hyperevm.json

# Etherscan API key (for HyperEVMScan verification)
# Get a free key at: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=

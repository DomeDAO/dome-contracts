# HyperEVM Deployment Configuration
# Copy this file to .env and fill in your values

# ============================================================
# NETWORK SELECTION
# ============================================================
# Options: "testnet" (chain 998) or "mainnet" (chain 999)
HYPER_EVM_NETWORK=testnet

# Optional: Override RPC URL (defaults based on network selection)
# HYPER_EVM_RPC=https://rpc.hyperliquid-testnet.xyz/evm

# Optional: Override chain ID
# HYPER_EVM_CHAIN_ID=998

# ============================================================
# AUTHENTICATION (choose ONE method)
# ============================================================

# Option A: Private Key (for hot wallets / testing)
# HYPER_EVM_PRIVATE_KEY=0xabc123...

# Option B: Ledger Hardware Wallet (recommended for mainnet)
# Set your Ledger's Ethereum address here
# HYPER_EVM_LEDGER_ADDRESS=0x9bDca32FAFbAcB2D937A2d3538C7b8ECA3e59946

# ============================================================
# CONTRACT ADDRESSES (from Hyperliquid docs)
# ============================================================

# USDC Address
# Testnet: 0x0B80659a4076E9E93C7DbE0f10675A16a3e5C206
# Mainnet: 0xb88339cb7199b77e23db6e890353e22632ba630f
HYPER_EVM_USDC=0x0B80659a4076E9E93C7DbE0f10675A16a3e5C206

# Hyperliquid Native Vault (default works for most cases)
# HYPER_EVM_HYPER_VAULT=0x93ad52177d0795de8c67c92b1a72035293cb7aac

# CoreWriter System Contract (rarely needs changing)
# HYPER_EVM_CORE_WRITER=0x3333333333333333333333333333333333333333

# ============================================================
# VAULT PARAMETERS
# ============================================================

# Donation percentage in basis points (1000 = 10%)
HYPER_EVM_DONATION_BPS=1000

# Share token name and symbol
HYPER_EVM_SHARE_NAME="NGO Hyper Share"
HYPER_EVM_SHARE_SYMBOL="NGO-H"

# ============================================================
# OUTPUT
# ============================================================

# Where to save deployment metadata
HYPER_EVM_DEPLOY_OUTPUT=../deployments/hyperevm-testnet.json

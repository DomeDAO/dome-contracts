# Copy to .env and fill values. Used by Hardhat (hardhat.config.ts) and deploy script (scripts/deploy-hyperevm.ts).

# --- Deployer credentials ---
# Private key funded on the target HyperEVM network.
HYPER_EVM_PRIVATE_KEY=0xYOUR_PRIVATE_KEY

# --- Network selection ---
# Supported: testnet (chainId 998), mainnet (chainId 999)
HYPER_EVM_NETWORK=testnet

# Optional overrides (defaults come from config/hyperevm.ts)
HYPER_EVM_RPC=https://rpc.hyperliquid-testnet.xyz/evm
HYPER_EVM_CHAIN_ID=998

# --- Core contract addresses (required for deployment) ---
# Canonical USDC address on the selected network (see Hyperliquid docs).
HYPER_EVM_USDC=0x0000000000000000000000000000000000000000

# Optional (defaults match upstream docs; override only if required)
HYPER_EVM_HYPER_VAULT=0x93ad52177d0795de8c67c92b1a72035293cb7aac
HYPER_EVM_CORE_WRITER=0x3333333333333333333333333333333333333333

# --- Vault parameters ---
# 1000 = 10% donation on incremental profit
HYPER_EVM_DONATION_BPS=1000
HYPER_EVM_SHARE_NAME="NGO Hyper Share"
HYPER_EVM_SHARE_SYMBOL="NGO-H"

# --- Deployment metadata output ---
# Where the deploy script writes addresses + parameters JSON.
HYPER_EVM_DEPLOY_OUTPUT=../deployments/hyperevm-testnet.json

# Select HyperEVM network defaults: "mainnet" or "testnet"
HYPER_EVM_NETWORK=testnet

# Override defaults if needed; otherwise leave blank to use values derived from HYPER_EVM_NETWORK
HYPER_EVM_RPC=
HYPER_EVM_CHAIN_ID=

# Private key (without 0x) for the deployer account (e.g., 0xC9d6... address)
HYPER_EVM_PRIVATE_KEY=

# Canonical HyperEVM USDC token address from Hyperliquid docs
HYPER_EVM_USDC=0x0B80659a4076E9E93C7DbE0f10675A16a3e5C206

# Optional overrides for system contracts
HYPER_EVM_HYPER_VAULT=0x93ad52177d0795de8c67c92b1a72035293cb7aac
HYPER_EVM_CORE_WRITER=0x3333333333333333333333333333333333333333

# Donation fee in basis points (1000 = 10%)
HYPER_EVM_DONATION_BPS=1000

# Metadata for the NGO share token minted per vault
HYPER_EVM_SHARE_NAME=NGO Hyper Share
HYPER_EVM_SHARE_SYMBOL=NGO-H

# Optional governance buffer beneficiary
HYPER_EVM_GOVERNANCE_BUFFER=0x0000000000000000000000000000000000000000

# Where to write deployment metadata relative to ngovault/contracts/
HYPER_EVM_DEPLOY_OUTPUT=../deployments/hyperevm-testnet.json
